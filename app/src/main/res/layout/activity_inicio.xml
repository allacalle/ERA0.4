<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Header aligned to top -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FC9"
        android:orientation="horizontal"
        android:gravity="center" >

        <Button
            android:layout_width="0dp"
            android:id="@+id/BtnRecientes"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Recientes"
            android:textColor="#fff"
            android:background="#3949AB"
            android:gravity="left"
            />

        <Button
            android:layout_width="0dp"
            android:id="@+id/BtnInicio"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Inicio"
            android:textColor="#fff"
            android:background="#3949AB"
            android:gravity="left"
            />



    </LinearLayout>

    <!-- Footer aligned to bottom -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#E1BEE7"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:id="@+id/BtnAtras"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Atras"
            android:textColor="#fff"
            android:background="#3949AB"
            android:gravity="left"
            />

        <Button
            android:layout_width="0dp"
            android:id="@+id/BtnSiguiente"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Siguiente"
            android:textColor="#fff"
            android:background="#3949AB"
            android:gravity="left"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/Otros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FC9"
        android:orientation="vertical"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/Otrfdfdos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FC9"
            android:orientation="horizontal"
            android:gravity="center" >

            <ImageButton
                android:layout_width="0dp"
                android:id="@+id/BtnAlta"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="Otro"
                android:src="@drawable/botonrojo"
                android:textColor="#fff"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_alignParentTop="true"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Otrgfgfdfdos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FC9"
            android:orientation="horizontal"
            android:gravity="center" >

            <ImageButton
                android:layout_width="0dp"
                android:id="@+id/BtnMedia"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="Otro"
                android:textColor="#fff"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:src="@drawable/botonamarillo"
                android:layout_alignParentTop="true"

                />

            <ImageButton
                android:layout_width="0dp"
                android:id="@+id/BtnBaja"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="Otro"
                android:textColor="#fff"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:src="@drawable/botonverde"
                android:layout_alignParentTop="true"

                />

        </LinearLayout>









    </LinearLayout>



    <!-- Inflate the contents of the ScrollView dynamicaly -->


</RelativeLayout>
